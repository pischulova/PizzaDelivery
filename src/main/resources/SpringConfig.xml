<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <bean name="pizzaServiceTest" class="ua.epam.rd.service.PizzaServiceTest">
        <constructor-arg ref="pizzaRepositoryTest"/>
    </bean>

    <bean id="orderServiceTest" class="ua.epam.rd.service.OrderServiceTest" c:repository-ref="orderRepositoryTest">
        <lookup-method name="createOrder" bean="order"/>
    </bean>

    <bean id="order" class="ua.epam.rd.domain.Order" scope="prototype"/>

</beans>
